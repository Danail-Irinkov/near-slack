{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "node_modules/**",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "trailingSlash": false,
    "cleanUrls": true
  },
	"emulators": {
		"hosting": {
			"port": 5555,
			"host": "0.0.0.0"
		}
	}
}
